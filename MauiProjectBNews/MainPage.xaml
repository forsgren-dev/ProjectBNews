<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectBNews.MainPage"
             BackgroundColor="White"
             Shell.BackgroundColor="CornflowerBlue"
             Shell.TitleColor="White">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center">
            <Label
                Text="Project B: News"
                FontSize="Header"
                Margin="0,20,0,0"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1" />
            <Image
                Source="dotnet_bot.png"
                HeightRequest="300"
                Aspect="AspectFit"
                Margin="0,20,0,0"
                SemanticProperties.Description="Dot net bot reading news" />

            <Label
                Text="Select a news category in the menu to get started."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Usage instruction" />

            <Label
                x:Name="ServiceLabel"
                Style="{StaticResource SubHeadline}"
                Text="Nr of items read from service"
                FontSize="16" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
